<div class="row">
  <div class="small-12 columns">
    <br />
    <%= form_for :user, :url => :signin do |f| %>
    <%= f.label :login %><br />
    <%= f.text_field :login %><br />
    <%= f.label :password %><br />
    <%= f.password_field :password %><br />
    <%= f.submit "Connexion", class: "button right" %>
    <% end %>
  </div>
</div>
