<table>
  <thead>
    <tr>
      <th width="300">Login</th>
      <th width="300">Activity</th>
    </tr>
  </thead>
  <tbody>
    <% @jobs.each do |job| %>
      <tr>
	<td><%= job.user.login %></td>
	<td><%= (job.todo.empty? or job.todo.empty?) ? "Undefined activity" : job.todo %></td>
      </tr>
    <% end %>
  </tbody>
</table>
