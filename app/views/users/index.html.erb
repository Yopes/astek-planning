<div class='row'>
  <div class="small-12 columns">
    <h3>Directory</h3>
    <table>
      <thead>
	<tr>
	  <th>Login</th>
	  <th>Firstname</th>
	  <th>Lastname</th>
	  <th>Phone</th>
	  <th>Mail</th>
	  <th>Promo</th>
	  <th>Actif</th>
	  <% if admin? %>
	    <th width="100">Edit</th>
	    <th width="100">Delete</th>
	  <% end %>
	</tr>
      </thead>
      <tbody>
	<% @users.each do |user| %>
	  <tr>
	    <td><%= user.login %></td>
	    <td><%= user.firstname %></td>
	    <td><%= user.lastname %></td>
	    <td><%= user.tel %></td>
	    <td><%= user.mail %></td>
	    <td><%= user.promo %></td>
	    <td><%= user.actif ? "Yes" : "No" %></td>
	    <% if admin? %>
	      <td><%= link_to "Edit", "#{users_path}/#{user.id}/edit",
		  class: "postfix button alert nomargin" %></td>
	      <td><%= link_to "Delete", user == current_user ? "#" : "#{users_path}/#{user.id}/delete",
		  class: "postfix button nomargin #{user == current_user ? 'inactive' : 'alert'}" %></td>
	    <% end %>
	  </tr>
	<% end %>
      </tbody>
    </table>
  </div>
</div>
